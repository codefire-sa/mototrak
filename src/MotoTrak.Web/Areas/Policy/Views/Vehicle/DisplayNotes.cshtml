@model List<VehicleNoteEntity>

@{
  Layout = "~/Views/Shared/_DialogLayout.cshtml";
}

@if (Model.Count > 0)
{
  foreach (var row in Model)
  {
    var header = row.UserCode + " - " + row.CreateDate.ToString("dd/MM/yyyy HH:mm");
    if (row.ClaimId > 0) { header += " - " + row.ClaimCode; }
		 
    <div class="@Html.Cycle("odd", "even")" style="padding:10px">
      <div style="font-weight:bold;">@header</div>
      <div style="padding-left:20px">@row.Note</div>
    </div>
  }
}
else
{
  <div class="listError">
    No Vehicle Notes Found.
  </div>
}
<div class="listResults">@Model.Count Record(s)</div>